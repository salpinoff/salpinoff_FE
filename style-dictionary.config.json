{
  "source": ["tokens/**/!(typography)*.json"],
  "platforms": {
    "css": {
      "transforms": ["attribute/cti", "name/cti/kebab", "color/hex", "size/px"],
      "buildPath": "build/css/",
      "files": [
        {
          "destination": "_variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        }
      ]
    }
  }
}
