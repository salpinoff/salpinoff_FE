{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@token/*": ["tokens/*"],
      "@public/*": ["public/*"],
      "@components/*": ["src/app/components/*"],
      "@constant/*": ["src/app/constant/*"],
      "@hooks/*": ["src/app/hooks/*"],
      "@store/*": ["src/app/store/*"],
      "@utils/*": ["src/app/utils/*"],
      "@type/*": ["src/app/types/*"],
      "@api/*": ["src/app/api/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
